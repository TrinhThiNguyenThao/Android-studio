<?xml version="1.0" encoding="UTF-8"?>

    -<RelativeLayout
    android:background="#262635" tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:background="#177DCD"
        android:layout_height="36dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="MTT61-NTU QUIZ"
        android:id="@+id/tieude"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="35dp"
        android:text="Màn Hình Chính"
        android:id="@+id/txt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/tieude"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="35dp"
        android:text="Chào mừng"
        android:id="@+id/txtv"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/txt"
        android:textColor="#27A6DF"
        android:layout_marginEnd="-3dp"
        android:layout_marginStart="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_height="240dp"
        android:layout_width="match_parent"
        android:id="@+id/img"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txtv"
        android:src="@drawable/aaa"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="176dp"
        android:layout_height="92dp"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49dp"
        android:text="Quiz 1"
        android:textSize="22dp" />

    <Button
        android:layout_height="90dp"
        android:layout_width="160dp"
        android:textSize="22dp"
        android:text="Quiz 2"
        android:id="@+id/btn2"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/img"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>